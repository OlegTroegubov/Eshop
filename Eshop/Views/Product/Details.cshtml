@model Eshop.Models.Product

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div>
    <h1>Детали продукта</h1>
</div>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessages))
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessages
    </div>
}

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id">
    <div class="mb-2">
        <label class="fw-bold">Название продукта:</label>
        <input type="text" class="form-control w-25" name="Title" placeholder="Название продукта" aria-label="Название продукта" aria-describedby="basic-addon1" value="@Model.Title">
    </div>
    <div class="mb-2">
        <label class="fw-bold">Цена, ₽:</label>
        <input type="text" class="form-control w-25" name="Price" placeholder="Цена" aria-label="Цена" aria-describedby="basic-addon1" value="@Model.Price">
    </div>
    <button type="submit" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#staticBackdropEdit">Редактировать</button>
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Удалить</button>
    <div>
        <a class="btn btn-outline-dark mt-1" href="@Url.Action("Index", "Product")" role="button">
            Вернуться обратно
        </a>
    </div>

